{
    "name": "multi-extend",
    "version": "1.0.0",
    "description": "A utility for extending multiple classes in JavasScript, enabling the creation of mixins.",
    "keywords": [
        "extends",
        "mixin",
        "multiple",
        "object oriented",
        "oop"
    ],
    "homepage": "https://github.com/electrovir/multi-extend",
